{% include 'header/header.html.twig' %}

<div>
	{% for project in projects['admin'] %}
	<a href="/CleverManagement/{{project.id}}/show">
		<div class="span2 directory" {% if project.status == 1%}style="background-color:#b94a48;"{%elseif project.status == 2%}style="background-color:#e67e22;"{%elseif project.status == 3%}style="background-color:#468847;"{%else%}style="background-color:#b94a48;"{%endif%}>
	      	<div class="title-directory">
	      		<span style='position:relative;top:5px;'>{{project.name}}</span>
	      	</div>
	      	<div class="descr-directory">
	      		Admin(s) : <br>
	      		{% for admin in project.admins %}
	      			- {{admin.email}}<br>
	      		{% endfor %}
	      		Membre(s) : <br>
	      		{% for member in project.members %}
	      			- {{member.email}}<br>
	      		{% endfor %}
	      	</div>
	      	<div class="menu-directory">
	      		<a href="/CleverManagement/{{project.id}}/edit" title="Editer le projet" class="edit-project">
	      			<span>
	      				<img src="/CleverManagement/assets/images/edit.png">
	      			</span>
	      		</a>
	      		<a href="/CleverManagement/{{project.id}}/delete" title="Supprimer le projet" class="delete-project">
	      			<span>
	      				<img src="/CleverManagement/assets/images/delete.png">
	      			</span>
	      		</a>
	      	</div>
	    </div>
	</a>
	{% endfor %}
	{% for project in projects['member'] %}
	<a href="/CleverManagement/{{project.id}}/show">
		<div class="span2 directory" {% if project.status == 1%}style="background-color:#b94a48;"{%elseif project.status == 2%}style="background-color:#e67e22;"{%elseif project.status == 3%}style="background-color:#468847;"{%else%}style="background-color:#b94a48;"{%endif%}>
	      	<div class="title-directory">
	      		<span style='position:relative;top:5px;'>{{project.name}}</span>
	      	</div>
	      	<div class="descr-directory">
	      		Admin(s) : <br>
	      		{% for admin in project.admins %}
	      			- {{admin.email}}<br>
	      		{% endfor %}
	      		Membre(s) : <br>
	      		{% for member in project.members %}
	      			- {{member.email}}<br>
	      		{% endfor %}
	      	</div>
	      	<div class="menu-directory">
	      	</div>
	    </div>
	</a>
	{% endfor %}
</div>

{% include 'footer/footer.html.twig' %}