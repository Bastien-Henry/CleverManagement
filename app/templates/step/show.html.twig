<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CleverManagement</title>
</head>
<body>
	<h3>{{step.name|raw}}</h3>

	<p>
		{{step.description|raw}}
	</p>
	<br><br>
	<a href="/Clevermanagement/{{project_id}}/step/{{step.id}}/edit">Editer</a> | <a href="/Clevermanagement/{{project_id}}/show/{{step.id}}/delete">Supprimer</a><br>
	<strong>Tasks</strong><br><br>
	<a href="/Clevermanagement/{{project_id}}/step/{{step.id}}/task/create">Nouvelle tache</a><br><br>
	<strong>{{message}}</strong><br>
	<br>
	{% for task in tasks %}
		{% if task.id_step == step.id %}
			Nom : {{ task.name }}<br>
			Description : {{ task.description }}<br>
			<a href="/Clevermanagement/{{ project_id }}/step/{{ step.id }}/task/{{ task.id }}/delete">Supprimer</a><br>
			<a href="/Clevermanagement/{{ project_id }}/step/{{ step.id }}/task/{{ task.id }}/edit">Editer</a><br>
			<a href="/Clevermanagement/{{ project_id }}/step/{{ step.id }}/task/{{ task.id }}/show">Voir</a><br>
		{% endif %}
	{% endfor %}
</body>
</html>
