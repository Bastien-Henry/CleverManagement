	<div>
			<div class="name-step"><span style="position:relative;top:5px;">Etape : {{step.name|raw}}</span></div>

			<div class="description-step">
				<p>
					<h3>Description de l'etape : </h3>
					{{step.description|raw}}
				</p>
				<p>
					Debut : {{step.startline}} <br>
					Fin : {{step.deadline}}
				</p>
			</div>
			<div class="action-step">
				<a href="/Clevermanagement/{{project_id}}/step/{{step.id}}/edit" title="Editer l'etape">
	      			<span>
	      				<img src="/CleverManagement/assets/images/edit.png">
	      			</span>
	      		</a>
	      		<a href="/Clevermanagement/{{project_id}}//{{step.id}}/delete" title="Supprimer l'etape'">
		  			<span>
		  				<img src="/CleverManagement/assets/images/delete.png">
		  			</span>
		  		</a>
	  		</div>
	  		<div class="task-step">
	  			<div class="task">
		  			<button class="btn btn-primary"><a href="/Clevermanagement/{{project_id}}/step/{{step.id}}/task/create" style="color:#fff;">Nouvelle tache</a></button>
	  			</div>

				<br><br>
				<strong>{{message}}</strong><br>
				<br><br>
				{% for task in tasks %}
				<a href="/Clevermanagement/{{ project_id }}/step/{{ step.id }}/task/{{ task.id }}/show">
					<div class="one-task">
						<div class="title-task-step">
							<span style="position:relative;top:5px;">{{ task.name }} du {{task.startline}} au {{task.deadline}}</span>
						</div>
						<div class="description-task-step">
							<span style="position:relative;top:10px;">{{ task.description }}</span>
						</div>
						
